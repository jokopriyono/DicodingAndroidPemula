<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextElementNormal" parent="@android:style/Widget.TextView">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:text">@string/element_normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/element_normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
    </style>

